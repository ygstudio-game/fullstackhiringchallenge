{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases - ENTERPRISE STANDARD */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@features": ["src/features"],
      "@features/*": ["src/features/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@nodes/": ["src/nodes/"],
      "@nodes/*": ["src/nodes/*"],
      "@theme/": ["src/theme/"],
      "@theme/*": ["src/theme/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src"]
}